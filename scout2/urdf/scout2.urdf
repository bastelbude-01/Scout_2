<?xml version="1.0"?>
<robot name="scout2">

    <!-- MATERIAL -->

    
    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <material name="green">
        <color rgba="0 1 0 1"/>
    </material>

    <material name="blue">
        <color rgba="0 0 1 1"/>
    </material>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.65 0 1"/>
    </material>

    <material name="yellow">
        <color rgba="1 1 0 1"/>
    </material>
    

    <!-- LINKS -->

    <link name="base_footprint"/>

    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.01" rpy="0.0 0.0 0.0"/>            
            <geometry>
                <box size="0.025 0.15 0.02"/>
            </geometry>
            <material name="black"/>
        </visual>        
    </link>

            <!--  WHEELS AND DEKO -->

    <link name="wheel_holder_right">
        <visual>
            <origin xyz="0.0 -0.05 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="wheel_holder_left">
        <visual>
            <origin xyz="0.0 0.05 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.03" length="0.1"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link> 

    <link name="wheel_right">
        <visual>
            <origin xyz="0.0 -0.0225 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0625" length="0.045"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="wheel_left">
        <visual>
            <origin xyz="0.0 0.0225 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0625" length="0.045"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="wheel_deko_right">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

    <link name="wheel_deko_left">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="1.57 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.025" length="0.001"/>
            </geometry>
            <material name="white"/>
        </visual>
    </link>

            <!-- CHASSIS AUFBAU -->

    <link name="chassis_main">
        <visual>
            <origin xyz="0.0 0.0 0.035" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.32 0.105 0.07"/>
            </geometry>
            <material name="orange"/>
        </visual>        
    </link>

    <link name="chassis_main_top">
        <visual>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.22 0.105 0.05"/>
            </geometry>
            <material name="orange"/>
        </visual>        
    </link>

    <link name="chassis_tail_cylinder">
        <visual>
            <origin xyz="0.0 0.0 0.06" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.0525" length="0.12"/>
            </geometry>
            <material name="orange"/>
        </visual>        
    </link>

    <link name="chassis_front_cylinder">
        <visual>
            <origin xyz="0.0 0.0 -0.0125" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.06" length="0.025"/>
            </geometry>
            <material name="orange"/>
        </visual>        
    </link>

    <link name="chassis_casterWheel_cylinder">
        <visual>
            <origin xyz="0.0 0.0 -0.045" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.015" length="0.09"/>
            </geometry>
            <material name="orange"/>
        </visual>        
    </link>

    <link name="caster_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.015"/>
            </geometry>
            <material name="orange"/>
        </visual>        
    </link>

    <!-- Camera -->

    <link name="camholder_1">
        <visual>
            <origin xyz="0.0 0.0 0.0015" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.04 0.005"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>

    <link name="camholder_2">
        <visual>
            <origin xyz="0.0 0.0 0.02" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.01 0.04 0.04"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>        

    <joint name="move_cam_joint" type="fixed">   <!-- Joint now Fixed but later Moving -->
        <parent link="chassis_front_cylinder"/>
        <child link="camholder_1"/>
        <origin xyz="0.0 0.0 0.02" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="camholder_main" type="fixed">
        <parent link="camholder_1"/>
        <child link="camholder_2"/>
        <origin xyz="0.04 0.0 0.0" rpy="0.0 0.0 0.0"/>
    </joint>
    
    <!-- CAMERA ENDE   -->

    <!-- LIDAR -->

    <link name="chassis_lidar_block">
        <visual>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.03 0.105 0.05"/>
            </geometry>
            <material name="black"/>
        </visual>        
    </link>

    <link name="lidar">
        <visual>
            <origin xyz="0.0 0.0 0.015" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.03"/>
            </geometry>
            <material name="red"/>
        </visual>        
    </link>

    <joint name="chassis_lidar" type="fixed">
        <parent link="chassis_main"/>
        <child link="chassis_lidar_block"/>
        <origin xyz="0.045 0.0 0.12" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="mount_lidar" type="fixed">
        <parent link="chassis_lidar_block"/>
        <child link="lidar"/>
        <origin xyz="0.0 0.0 0.05" rpy="0.0 0.0 0.0"/>
    </joint>
    

    <!-- Joints_Fixed -->

    <joint name="base_footprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.085" rpy="0.0 0.0 0.0"/>
    </joint>

            <!-- Wheels-->

    <joint name="chassi_1" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_holder_right"/>
        <origin xyz="0.0 -0.035 -0.02" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="chassi_2" type="fixed">
        <parent link="base_link"/>
        <child link="wheel_holder_left"/>
        <origin xyz="0.0 0.035 -0.02" rpy="0.0 0.0 0.0"/>
    </joint> 

    <joint name="deko_1" type="fixed">
        <parent link="wheel_right"/>
        <child link="wheel_deko_right"/>
        <origin xyz="0.0 -0.045 0" rpy="0.0 0.0 0.0"/>
    </joint> 

    <joint name="deko_2" type="fixed">
        <parent link="wheel_left"/>
        <child link="wheel_deko_left"/>
        <origin xyz="0.0 0.045 0" rpy="0.0 0.0 0.0"/>
    </joint> 

            <!-- Chassi-->
    
    <joint name="chassi_base" type="fixed">
        <parent link="base_link"/>
        <child link="chassis_main"/>
        <origin xyz="-0.08 0.0 0.02" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="chassi_base_top" type="fixed">
        <parent link="chassis_main"/>
        <child link="chassis_main_top"/>
        <origin xyz="-0.05 0.0 0.07" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="chassi_base_cylinder" type="fixed">
        <parent link="chassis_main"/>
        <child link="chassis_tail_cylinder"/>
        <origin xyz="-0.16 0 0" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="chassi_front_cylinder" type="fixed">
        <parent link="chassis_main"/>
        <child link="chassis_front_cylinder"/>
        <origin xyz="0.135 0 0.07" rpy="0.0 0.0 0.0"/>
    </joint>

    <joint name="chassi_casterWheel_cylinder" type="fixed">
        <parent link="chassis_tail_cylinder"/>
        <child link="chassis_casterWheel_cylinder"/>
        <origin xyz="0 0 0" rpy="0.0 0.0 0.0"/>
    </joint>
    
    <joint name="casterWheel" type="fixed">
        <parent link="chassis_casterWheel_cylinder"/>
        <child link="caster_wheel"/>
        <origin xyz="0 0 -0.09" rpy="0.0 0.0 0.0"/>
    </joint>

    
    


    <!-- Moving Joints -->

    <joint name="joint_1" type="revolute">
        <parent link="wheel_holder_right"/>
        <child link="wheel_right"/>
        <axis xyz="0 1 0"/>
        <limit lower="-3.14159" upper="3.14159" velocity="50.0" effort="1000.0"/>
        <origin xyz="0 -0.1 0" rpy="0 0 0"/>
    </joint>

    <joint name="joint_2" type="revolute">
        <parent link="wheel_holder_left"/>
        <child link="wheel_left"/>
        <axis xyz="0 1 0"/>
        <limit lower="-3.14159" upper="3.14159" velocity="50.0" effort="1000.0"/>
        <origin xyz="0 0.1 0" rpy="0 0 0"/>
    </joint>
    
    


</robot>